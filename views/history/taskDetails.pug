extends layout

block content

  hr
  h5= `Task Information`

  table(class="table table-striped")
    tbody
    tr
        td= `Owner`
        td= build.owner
    tr
        td= `Repository`
        td= build.repository
    tr
        td= `Build Key`
        td= build.build_key
    tr
        td= `Build`
        td= build.build

    tr
        td= `Task`
        td= task.task
    tr
        td= `Conclusion`
        td= task.conclusion
    tr
        td= `Node`
        td= task.node

  if task.result
    h5 Task Result:
    table(class="table table-striped table-sm")
      tbody
        tr
          td Conclusion
          td= task.result.conclusion
        tr
          td Title
          td= task.result.title
        tr
          td Summary
          td= task.result.summary
        tr
          td Text
          td= task.result.text