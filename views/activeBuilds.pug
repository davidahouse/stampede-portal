extends layout

block content

  nav(class="w-100")
    ol(class="breadcrumb align-items-center")
      li(class="breadcrumb-item")
        a(href="/")
          =`Home`
      li(class="breadcrumb-item active")
        =`Active Builds`

  table(class="table table-striped table-sm")
    tbody
      each build, i in builds
        tr
          td
            a(href=`/buildDetails?buildID=` + build.build_id)= build.owner
          td
            a(href=`/buildDetails?buildID=` + build.build_id)= build.repository
          td
            a(href=`/buildDetails?buildID=` + build.build_id)= build.build_key
          td
            a(href=`/buildDetails?buildID=` + build.build_id)= build.build
          td= build.status
